---
// ProjectCard.astro
export interface Props {
  title: string;
  description: string;
  image: string;
  tags: string[];
  githubUrl: string;
  paperUrl?: string;
  demoUrl?: string;
}

const { title, description, image, tags, githubUrl, paperUrl, demoUrl } = Astro.props;
---

<article class="group relative bg-slate-950/70 backdrop-blur-md border border-white/10 rounded-xl overflow-hidden hover:bg-slate-900 transition-all duration-300 hover:scale-[1.02] hover:shadow-2xl group-hover:ring-2 group-hover:ring-blue-500/50 h-96">
  <!-- Background Image -->
  <div class="h-48 relative overflow-hidden">
    <img 
      src={image} 
      alt={title}
      class="w-full h-full object-cover opacity-60 group-hover:opacity-80 transition-opacity duration-300"
    />
    <div class="absolute inset-0 bg-gradient-to-br from-slate-900/90 via-slate-800/50 to-transparent z-10"></div>
    
    <!-- Favorite/Star Icon -->
    <div class="absolute top-4 right-4 text-yellow-400 opacity-0 group-hover:opacity-100 transition-opacity z-20">
      <svg class="w-5 h-5 animate-pulse group-hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
      </svg>
    </div>
  </div>
  
  <!-- Content -->
  <div class="p-4 relative z-20 h-48 flex flex-col justify-between">
    <!-- Meta Info -->
    <div class="flex items-center justify-between mb-2 text-xs text-slate-400">
      <span>3 min read</span>
      <span>Dec 15, 2024</span>
    </div>
    
    <!-- Title -->
    <h3 class="text-lg font-bold text-slate-100 mb-2 group-hover:text-blue-400 transition-colors line-clamp-2">
      {title}
    </h3>
    
    <!-- Description -->
    <p class="text-slate-200 mb-3 line-clamp-2 text-sm">
      {description}
    </p>
    
    <!-- Tags -->
    <div class="flex flex-wrap gap-1 mb-3">
      {tags.slice(0, 3).map(tag => (
        <span class="px-2 py-1 bg-blue-600/20 text-blue-400 rounded-full text-xs">
          {tag}
        </span>
      ))}
    </div>
    
    <!-- Links -->
    <div class="flex gap-2 mt-auto">
      <a 
        href={githubUrl}
        class="flex items-center gap-1 px-3 py-1 bg-slate-800 hover:bg-slate-700 text-white rounded-md transition-colors text-xs"
      >
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0C5.374 0 0 5.373 0 12 0 17.302 3.438 21.8 8.207 23.387c.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
        </svg>
        Code
      </a>
      
      {paperUrl && (
        <a 
          href={paperUrl}
          class="flex items-center gap-1 px-3 py-1 bg-blue-600 hover:bg-blue-700 text-white rounded-md transition-colors text-xs"
        >
          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8l-6-6z"/>
            <path d="M14 2v6h6"/>
          </svg>
          Paper
        </a>
      )}
      
      {demoUrl && (
        <a 
          href={demoUrl}
          class="flex items-center gap-1 px-3 py-1 bg-green-600 hover:bg-green-700 text-white rounded-md transition-colors text-xs"
        >
          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
            <path d="M8 5v14l11-7z"/>
          </svg>
          Demo
        </a>
      )}
    </div>
  </div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

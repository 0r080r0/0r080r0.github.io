---
// ProjectCard.astro
export interface Props {
  title: string;
  description: string;
  image: string;
  tags: string[];
  githubUrl: string;
  paperUrl?: string;
  demoUrl?: string;
}

const { title, description, image, tags, githubUrl, paperUrl, demoUrl } = Astro.props;
---

<article class="group relative h-96 rounded-xl overflow-hidden bg-gradient-to-br from-slate-900 to-slate-950 border border-slate-800 shadow-md hover:shadow-xl hover:scale-[1.015] transition-all duration-300 backdrop-blur-md">
  <!-- Background Image Layer -->
  <div class="absolute inset-0 z-0">
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover opacity-20 mix-blend-lighten pointer-events-none"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-slate-950/90 via-slate-900/70 to-transparent"></div>

    <!-- Meta Info Bar -->
    <div class="absolute bottom-0 left-0 right-0 bg-black/90 text-white text-[0.7rem] flex justify-between px-4 py-1 z-20 font-mono tracking-wide">
      <span>3 min read</span>
      <span>Dec 15, 2024</span>
    </div>
  </div>

  <!-- Foreground Content -->
  <div class="relative z-10 h-full flex flex-col justify-end p-5">
    <!-- Title -->
    <h3 class="text-xl font-semibold text-white leading-tight group-hover:text-blue-400 transition-colors line-clamp-2 mb-2">
      {title}
    </h3>

    <!-- Description -->
    <p class="text-sm text-slate-300 mb-3 line-clamp-2">
      {description}
    </p>

    <!-- Tags -->
    <div class="flex flex-wrap gap-1 mb-4">
      {tags.slice(0, 3).map(tag => (
        <span class="px-2 py-0.5 text-xs bg-slate-800 text-teal-300 rounded-full tracking-tight">
          {tag}
        </span>
      ))}
    </div>

    <!-- Action Buttons -->
    <div class="flex gap-2 mt-auto">
      <a
        href={githubUrl}
        class="flex items-center gap-1 px-3 py-1.5 bg-slate-800 hover:bg-slate-700 text-white text-xs rounded-md transition-colors"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0C5.373 0 0 5.372 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.386-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.508 11.508 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.873.118 3.176.77.84 1.235 1.91 1.235 3.22 0 4.609-2.807 5.624-5.479 5.922.43.372.823 1.102.823 2.222v3.293c0 .318.192.694.801.576C20.566 21.797 24 17.299 24 12c0-6.628-5.372-12-12-12z"/>
        </svg>
        Code
      </a>

      {paperUrl && (
        <a
          href={paperUrl}
          class="flex items-center gap-1 px-3 py-1.5 bg-blue-700 hover:bg-blue-600 text-white text-xs rounded-md transition-colors"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8l-6-6z"/>
            <path d="M14 2v6h6"/>
          </svg>
          Paper
        </a>
      )}

      {demoUrl && (
        <a
          href={demoUrl}
          class="flex items-center gap-1 px-3 py-1.5 bg-green-600 hover:bg-green-500 text-white text-xs rounded-md transition-colors"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M8 5v14l11-7z"/>
          </svg>
          Demo
        </a>
      )}
    </div>
  </div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

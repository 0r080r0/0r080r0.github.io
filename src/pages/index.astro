---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: "Drummer Posture Monitoring Application",
    description: "A prototype application for real-time monitoring of posture while playing drums. Shows live feedback and helps drummers correct bad postural habits.",
    image: "https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?w=600&h=400&fit=crop",
    tags: ["React", "Python", "OpenPose", "Computer Vision"],
    githubUrl: "https://github.com/0r080r0/WebApp-DrummerPosture",
    demoUrl: "https://0r080r0.github.io/WebApp-DrummerPosture/",
    readTime: "3 min read"
  },
  {
    title: "AI-Powered Music Therapy Platform",
    description: "Machine learning system that analyzes musician performance data to provide personalized health recommendations and injury prevention.",
    image: "https://images.unsplash.com/photo-1493225457124-a3eb161ffa5f?w=600&h=400&fit=crop",
    tags: ["Machine Learning", "Health Tech", "Music Analysis"],
    githubUrl: "#",
    paperUrl: "/papers/music-therapy-ai.pdf",
    readTime: "5 min read"
  },
  {
    title: "Biomechanical Movement Analysis",
    description: "Advanced computer vision system for analyzing musician movement patterns and identifying potential injury risks in real-time.",
    image: "https://images.unsplash.com/photo-1511671782779-c97d3d27a1d4?w=600&h=400&fit=crop",
    tags: ["Computer Vision", "Biomechanics", "Health Analytics"],
    githubUrl: "#",
    demoUrl: "#",
    readTime: "4 min read"
  }
];
---

<Layout title="Evangelia Karakoliou - PhD Portfolio">
  <!-- Hero Section -->
  <section class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 flex items-center justify-center relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23374151" fill-opacity="0.1"%3E%3Ccircle cx="30" cy="30" r="2"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-20"></div>
    
    <div class="max-w-6xl mx-auto px-6 text-center z-10">
      <div class="mb-8">
        <h1 class="text-6xl md:text-8xl font-bold text-white mb-6 leading-tight">
          Evangelia Karakoliou
        </h1>
        <p class="text-2xl md:text-3xl text-gray-300 mb-8 font-light">
          PhD Researcher in Musician Health & AI
        </p>
        <p class="text-lg md:text-xl text-gray-400 max-w-3xl mx-auto leading-relaxed">
          Exploring the intersection of artificial intelligence, computer vision, and musician health. 
          Building intelligent systems that help musicians perform better while staying healthy.
        </p>
      </div>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="#research" class="px-8 py-4 bg-blue-600 hover:bg-blue-700 text-white rounded-full font-medium transition-all duration-300 transform hover:scale-105">
          View Research
        </a>
        <a href="/cv.pdf" class="px-8 py-4 border-2 border-white text-white hover:bg-white hover:text-slate-900 rounded-full font-medium transition-all duration-300">
          Download CV
        </a>
      </div>
    </div>
  </section>

  <!-- Research Section -->
  <section id="research" class="py-20 bg-slate-900">
    <div class="max-w-6xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Featured Research
        </h2>
        <p class="text-xl text-gray-400 max-w-3xl mx-auto">
          Advancing musician health through innovative AI applications and computer vision technology.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project, index) => (
          <article class="bg-slate-800 rounded-xl overflow-hidden hover:transform hover:scale-105 transition-all duration-300 shadow-2xl">
            <div class="relative">
              <img 
                src={project.image} 
                alt={project.title}
                class="w-full h-48 object-cover"
              />
              <div class="absolute top-4 left-4 bg-slate-900 bg-opacity-80 text-white px-3 py-1 rounded-full text-sm">
                {project.readTime}
              </div>
            </div>
            
            <div class="p-6">
              <h3 class="text-xl font-bold text-white mb-3 leading-tight">
                {project.title}
              </h3>
              <p class="text-gray-400 mb-4 text-sm leading-relaxed">
                {project.description}
              </p>
              
              <div class="flex flex-wrap gap-2 mb-4">
                {project.tags.map(tag => (
                  <span class="px-3 py-1 bg-blue-600 bg-opacity-20 text-blue-400 rounded-full text-xs">
                    {tag}
                  </span>
                ))}
              </div>
              
              <div class="flex gap-3 text-sm">
                {project.githubUrl && (
                  <a href={project.githubUrl} class="text-blue-400 hover:text-blue-300 transition-colors">
                    GitHub
                  </a>
                )}
                {project.demoUrl && (
                  <a href={project.demoUrl} class="text-green-400 hover:text-green-300 transition-colors">
                    Demo
                  </a>
                )}
                {project.paperUrl && (
                  <a href={project.paperUrl} class="text-yellow-400 hover:text-yellow-300 transition-colors">
                    Paper
                  </a>
                )}
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-20 bg-gradient-to-b from-slate-900 to-slate-800">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-8">
        About My Research
      </h2>
      <p class="text-lg text-gray-300 leading-relaxed mb-8">
        My doctoral research focuses on developing AI-powered solutions for musician health and performance optimization. 
        I combine computer vision, machine learning, and biomechanical analysis to create tools that help musicians 
        prevent injuries and improve their technique.
      </p>
      <p class="text-lg text-gray-300 leading-relaxed">
        Through innovative applications of pose estimation, movement analysis, and real-time feedback systems, 
        I'm working to make music performance safer and more accessible for musicians of all levels.
      </p>
    </div>
  </section>
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  article {
    animation: fadeInUp 0.6s ease-out;
  }
</style>
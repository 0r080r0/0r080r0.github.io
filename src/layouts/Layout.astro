---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ProjectCard from '../components/ProjectCard.astro';

const projects = [
  {
    title: "Neural Network Optimization",
    description: "Advanced optimization techniques for deep learning models using novel gradient descent methods. Achieved 40% performance improvement over state-of-the-art baselines.",
    image: "https://images.unsplash.com/photo-1451187580459-43490279c0fa?w=400&h=300&fit=crop", // Space/tech theme
    tags: ["Python", "TensorFlow", "Deep Learning"],
    githubUrl: "https://github.com/yourusername/neural-optimization",
    paperUrl: "/papers/neural-optimization.pdf",
    demoUrl: "https://demo.yourproject.com"
  },
  {
    title: "Distributed Computing Framework",
    description: "Scalable framework for distributed machine learning workloads across multiple GPU clusters. Handles fault tolerance and dynamic resource allocation.",
    image: "https://images.unsplash.com/photo-1518709268805-4e9042af2176?w=400&h=300&fit=crop", // Mountain/nature
    tags: ["Python", "CUDA", "Distributed Systems"],
    githubUrl: "https://github.com/yourusername/distributed-ml",
    paperUrl: "/papers/distributed-computing.pdf"
  },
  {
    title: "Computer Vision Pipeline",
    description: "End-to-end computer vision system for real-time object detection and tracking in complex environments. Deployed in production systems.",
    image: "https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=400&h=300&fit=crop", // Nature/landscape
    tags: ["OpenCV", "PyTorch", "Computer Vision"],
    githubUrl: "https://github.com/yourusername/cv-pipeline",
    demoUrl: "https://cv-demo.yourproject.com"
  },
  {
    title: "NLP Transformer Architecture",
    description: "Novel transformer architecture for multilingual text processing with improved efficiency and accuracy in low-resource languages.",
    image: "https://images.unsplash.com/photo-1519904981063-b0cf448d479e?w=400&h=300&fit=crop", // Sunset/nature
    tags: ["Transformers", "NLP", "PyTorch"],
    githubUrl: "https://github.com/yourusername/nlp-transformer",
    paperUrl: "/papers/nlp-transformer.pdf"
  },
  {
    title: "Quantum Machine Learning",
    description: "Hybrid quantum-classical algorithms for optimization problems in machine learning. Exploring quantum advantage in specific ML tasks.",
    image: "https://images.unsplash.com/photo-1464822759844-d150baec4ba5?w=400&h=300&fit=crop", // Mountain landscape
    tags: ["Quantum", "Qiskit", "Optimization"],
    githubUrl: "https://github.com/yourusername/quantum-ml",
    paperUrl: "/papers/quantum-ml.pdf",
    demoUrl: "https://quantum-demo.yourproject.com"
  },
  {
    title: "Reinforcement Learning Agents",
    description: "Multi-agent reinforcement learning system for complex environment navigation and task completion with emergent behaviors.",
    image: "https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=400&h=300&fit=crop", // Ocean/travel
    tags: ["RL", "Multi-Agent", "Environment"],
    githubUrl: "https://github.com/yourusername/rl-agents",
    demoUrl: "https://rl-demo.yourproject.com"
  }
];
---

<Layout title="Your Name - PhD Portfolio">
  <main>
    <!-- Hero Section -->
    <Hero />
    
    <!-- Projects Section -->
    <section class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 py-16">
      <div class="max-w-6xl mx-auto px-6">
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            Featured Research
          </h2>
          <p class="text-lg text-gray-400 max-w-2xl mx-auto">
            Exploring the frontiers of machine learning and artificial intelligence through innovative research and practical applications.
          </p>
        </div>
        
        <!-- Projects Grid - 2 rows, 3 columns -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
          {projects.map(project => (
            <ProjectCard
              title={project.title}
              description={project.description}
              image={project.image}
              tags={project.tags}
              githubUrl={project.githubUrl}
              paperUrl={project.paperUrl}
              demoUrl={project.demoUrl}
            />
          ))}
        </div>
        
        <!-- Load More Button -->
        <div class="text-center mt-12">
          <button class="px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-full font-medium transition-colors">
            View All Projects
          </button>
        </div>
      </div>
    </section>
    
    <!-- About Section -->
    <section class="py-20 bg-slate-900/50">
      <div class="max-w-4xl mx-auto px-6 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-8">
          About My Research
        </h2>
        <p class="text-lg text-gray-300 leading-relaxed">
          My doctoral research focuses on advancing the state of artificial intelligence through 
          novel algorithmic approaches and practical applications. I specialize in deep learning 
          architectures, optimization techniques, and distributed computing systems that enable 
          scalable AI solutions for real-world problems.
        </p>
      </div>
    </section>
  </main>
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>